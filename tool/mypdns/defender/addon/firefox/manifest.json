{
  "manifest_version": 2,
  "name": "My Privacy DNS Defender",
  "description": "Filtering websites made easy.",
  "version": "1.0.0",
  "author": "Crimeflare",
  "homepage_url": "http://crimeflare.eu.org/",
  "permissions": [
    "<all_urls>",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ],
  "options_ui": {
    "page": "list/list.html"
  },
  "icons": {
    "96": "icon.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "web_accessible_resources": [
    "blocked.html"
  ],
  "applications": {
    "gecko": {
      "id": "defender@cat.mypdns.org",
      "strict_min_version": "91.0",
      "update_url": "https://git.disroot.org/dCF/deCloudflare/raw/branch/master/tool/mypdns/update_firefox.json"
    }
  }
}